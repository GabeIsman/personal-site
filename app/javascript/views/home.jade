mixin work(job)
  article
    .article-image
      img(src=job.image)
    a(href=job.url target='_blank')
      h4.article-title= job.title
    p.article-description= job.description

.left-column
  .profile-card
    .image-container
    h2.name-container Gabe Isman
    p.mission Constantly seeking ways to increase peace, justice, and openness.
.right-column
  section
    h1 Projects
    .work-container
      each project in projects
        +work(project)
  section
    h1 9-to-5s
    .work-container
      each job in jobs
        +work(job)
